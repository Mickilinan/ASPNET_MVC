<section class="subscribe">
    <div class="container">
        <div class="text">
            <h2>Don't Want to Miss Anything?</h2>
            <img src="/Images/arrows.svg" alt="arrow swirling downwards">
        </div>
        <div class="grid">
            <div class="signup">
                <h5>Sign up for Newsletters</h5>
            </div>
            <div class="signup-check1">
                <div class="checkbox">
                    <input type="checkbox" /> <span>Daily Newsletter</span>
                </div>
                <div class="checkbox">
                    <input type="checkbox" /> <span>Event Updates</span>
                </div>
            </div>
            <div class="signup-check2">
                <div class="checkbox">
                    <input type="checkbox" /> <span>Advertising Updates</span>
                </div>
                <div class="checkbox">
                    <input type="checkbox" /> <span>Startups Weekly</span>
                </div>
            </div>
            <div class="signup-check3">
                <div class="checkbox">
                    <input type="checkbox" /> <span>Week in Review</span>
                </div>
                <div class="checkbox">
                    <input type="checkbox" /> <span>Podcasts</span>
                </div>
            </div>

        </div>
        <div class="subscribe-form">
            <form>
                <input type="text" id="email-signup" placeholder="Your Email">
                <i class="fa-light fa-envelope"></i>
            </form>
            <button class="btn-theme">Subscribe*</button>
        </div>
        <div class="terms">
            <p>* Yes, I agree to the terms and privacy policy.</p>
        </div>
    </div>
</section>