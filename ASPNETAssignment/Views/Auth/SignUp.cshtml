@model SignUpViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<!DOCTYPE html>
<html lang="sv-se">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="create-account ">
        <div class="content">



		

			<div class="title">
                    <h1>Create Account</h1>
            </div>
                <div class="little-text">
                    <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here.</a></p>
                </div>

                <div class="name-by-side">
                    <div class="input-field">
                        <p>First name</p>
                        <input type="text"
                               placeholder="Enter your first name" />
                    </div>
                    <div class="input-field">
                        <p>Last name</p>
                        <input type="text"
                               placeholder="Enter your last name" />
                    </div>
                </div>

                <div class="input-field">
                    <p>Email address</p>
                    <input type="text"
                           placeholder="Enter your email address" />
                </div>

                <div class="input-field">
                    <p>Password</p>
                    <input type="text"
                           placeholder="******" />
                </div>
                <div class="input-field">
                    <p>Confirm Password</p>
                    <input type="text"
                           placeholder="******" />
                </div>

                <div class="checkbox">
                    <input type="checkbox" /> <span>I agree to the <a href="#">Terms & Conditions.</a></span>
                </div>

            <form method="post" asp-controller="Auth" asp-action="SignUp">
                <button class="btn-theme-s" type="submit">@Model.PageTitle</button>
            </form>
			

        </div>
    </div>

</body>
</html>
